{
"general": {"gridspec_ncols": 100, "gridspec_nrows": 100, 
            "gridspec_format": {"left": 0.01, "right": 0.99, "top": 0.96, "bottom": 0.04, "wspace": 0.00, "hspace": 0.00},
            "lasso": {"alpha": 0.5, "color": "hotpink", "linewidth": 1},
            "obs_zorder": 5, "obs_label": "observations", "obs_markerfacecolor": "black", 
            "legend_color_palette": "husl",
            "experiment_domain_polygon": {"linewidth": 1, "linestyle": "--", "fill": false, "zorder": 2}},

"legend": {"remove_spines": ["top", "right", "left", "bottom"],
           "xtick_params": {"which": "both", "bottom": false, "top": false, "right": false, "left": false, "labelbottom": false, "labeltop": false, "labelright": false, "labelleft": false},
           "ytick_params": {"which": "both", "bottom": false, "top": false, "right": false, "left": false, "labelbottom": false, "labeltop": false, "labelright": false, "labelleft": false},
           "plot": {"loc": "upper left", "mode": "expand", "ncol": 3, "borderaxespad": 0, "fontsize": 9.0, "handles": {"markersize": 11, "marker": "o", "color": "white", "obs_label": "Observations"}}},

"metadata": {"non-ghost_vars": {"longitude": {"name_one": "Lon.", "dp": 4},
                                "latitude":  {"name_one": "Lat.", "dp": 4}},
             "ghost_vars": {"longitude":                           {"name_one": "Lon.", "dp": 4},
                            "latitude":                            {"name_one": "Lat.", "dp": 4},
                            "measurement_altitude":                {"name_one": "Meas. Alt.", "name_multiple": "Median Meas. Alt.", "dp": 2, "units": "m"},
                            "GSFC_coastline_proximity":            {"name_one": "To Coast", "name_multiple": "Median To Coast", "dp": 2, "units": "km"},
                            "GHSL_population_density":             {"name_one": "Pop. Dens.", "name_multiple": "Median Pop. Dens.", "dp": 1, "units": "xx/kmâ€“2"},
                            "station_name":                        {"name_one": "Station Name"},
                            "country":                             {"name_one": "Country", "name_multiple": "Country"},
                            "area_classification":                 {"name_one": "Area Class.", "name_multiple": "Area Class."},
                            "station_classification":              {"name_one": "Station Class.", "name_multiple": "Station Class."},
                            "MODIS_MCD12C1_v6_IGBP_land_use":      {"name_one": "MODIS Land Use", "name_multiple": "MODIS Land Use"},
                            "GHSL_settlement_model_classification":{"name_one": "GHSL Class.", "name_multiple": "GHSL Class."}, 
                            "measurement_methodology":             {"name_one": "Method", "name_multiple": "Method"},
                            "measuring_instrument_name":           {"name_one": "Instrument", "name_multiple": "Instrument"}},
             "max_vars_per_row": 3,                 
             "max_uniques": 3,
             "var_spacing": 2,
             "remove_spines": ["top", "right", "left", "bottom"],
             "xtick_params": {"which": "both", "bottom": false, "top": false, "right": false, "left": false, "labelbottom": false, "labeltop": false, "labelright": false, "labelleft": false},
             "ytick_params": {"which": "both", "bottom": false, "top": false, "right": false, "left": false, "labelbottom": false, "labeltop": false, "labelright": false, "labelleft": false},
             "plot": {"ha": "left", "va": "top", "fontsize": 8.0, "wrap": true, "linespacing": 1.5}},

"map": {"map_coastline_resolution": "low",
        "land_polygon": {"facecolor": "0.85"},
        "projection": "Robinson",
        "gridlines": {"linestyle": "-", "alpha": 0.4},
        "map_extent": [-180, 180, -90, 90],
        "axis_title": {"label": "", "fontsize": 8.5, "pad": 3},
        "cb": {"vmin_absolute": "", "vmax_absolute": "", "vmin_bias": "", "vmax_bias": "", "cmap_absolute": "", "cmap_bias": "", "n_ticks": 8, "orientation": "horizontal", "discrete": true, "n_discrete": 7},
        "cb_label": {"fontsize": 8}, 
        "cb_tick_params": {"labelsize": 8},
        "annotate_stats": ["Mean"],
        "annotate_text": {"s": "", "loc": "upper right", "fontsize": 6, "n_stations": false, "round_decimal_places": 2},
        "annotate_bbox": {"facecolor": "white", "edgecolor": "gainsboro", "alpha": 1},
        "marker_selected": {"s": 8, "alpha": 1.0},
        "marker_unselected": {"s": 4, "alpha": 0.25},
        "plot": {"s": 4, "zorder": 3, "linewidth": 0.0, "alpha": null, "picker": 1},
        "plot_options": ["bias", "obs", "annotate"]},

"timeseries": {"grid": {"axis": "both", "color": "lightgrey", "alpha": 0.8},
               "remove_spines": ["top", "right"],
               "axis_title": {"label": "", "fontsize": 8}, 
               "xlabel": {"xlabel": "Time", "fontsize": 8},
               "ylabel": {"ylabel": "", "fontsize": 8},
               "xtick_params": {"labelsize": 8},
               "xtick_alteration":{"define": true, "n_slices": 5, "last_step": false},
               "ytick_params": {"labelsize": 8},
               "annotate_stats": ["Mean", "StdDev", "r2", "RMSE", "MB"],
               "annotate_text": {"s": "", "loc": "upper right", "fontsize": 6, "n_stations": true, "round_decimal_places": 2},
               "annotate_bbox": {"facecolor": "white", "edgecolor": "gainsboro", "alpha": 1},
               "trend": {"window": 6, "min_points": 1, "format":{"linewidth": 1.0}},
               "markersize_npoints_threshold": 200,
               "markersize": {"standard": 1.1, "few_points": 4.0},
               "plot": {"marker": "o", "markeredgecolor": null, "mew": 0, "linestyle": "None"},
               "plot_options": ["bias", "obs", "individual", "annotate", "trend", "logy"]},

"periodic": {"axis_title": {"label": "", "fontsize": 8},
             "label": {"xy": [0, 1], "xytext": [2, -2], "xycoords": "axes fraction", "textcoords": "offset points", "fontsize": 9, "ha": "left", "va": "top", "zorder": 3},
             "ylabel": {"ylabel": "", "fontsize": 8}, 
             "xtick_params": {"labelsize": 8}, 
             "ytick_params": {"labelsize": 8},
             "ygrid": {"color": "lightgrey", "alpha": 0.8, "zorder": 1},
             "annotate_stats": ["Min", "Max"],
             "annotate_text": {"s": "", "loc": "upper right", "fontsize": 6, "n_stations": false, "round_decimal_places": 2},
             "annotate_bbox": {"facecolor": "white", "edgecolor": "gainsboro", "alpha": 1},
             "bias_line": {"linestyle": "--", "linewidth": 1.0, "color": "black", "zorder": 2},
             "plot": {"marker": "o", "markersize": 3, "linewidth": 0.5},
             "plot_options": ["bias", "obs", "individual", "annotate", "logy"]},

"periodic-violin": {"axis_title": {"label":"", "fontsize": 8},
                    "label": {"xy": [0, 1], "xytext": [2, -2], "xycoords": "axes fraction", "textcoords": "offset points", "fontsize": 9, "ha": "left", "va": "top", "zorder": 3},
                    "ylabel": {"ylabel": "", "fontsize": 8},
                    "xtick_params": {"labelsize": 8}, 
                    "ytick_params": {"labelsize": 8}, 
                    "ygrid": {"color": "lightgrey", "alpha": 0.8, "zorder": 1},
                    "annotate_stats": ["Min", "Max"],
                    "annotate_text": {"s": "", "loc": "upper right", "fontsize": 6, "n_stations": false, "round_decimal_places": 2},
                    "annotate_bbox": {"facecolor": "white", "edgecolor": "gainsboro", "alpha": 1},    
                    "patch":{"alpha_obs": 0.7, "alpha_exp": 0.5},
                    "plot_violin": {"points": 100, "widths": 0.85, "showmeans": false, "showmedians": false, "showextrema": false},
                    "plot_p50": {"marker": "o", "markersize": 3, "linewidth": 0.5},
                    "plot_options":["obs", "individual", "annotate", "logy"]},

"distribution": {"grid": {"axis": "both", "color": "lightgrey", "alpha": 0.8},
                 "axis_title": {"label": "", "fontsize": 8},
                 "xlabel": {"xlabel": "", "fontsize": 8},
                 "ylabel": {"ylabel": "Density", "fontsize": 8}, 
                 "xtick_params": {"labelsize": 7},
                 "ytick_params": {"labelsize": 7}, 
                 "annotate_stats": ["Min", "Max"],
                 "annotate_text": {"s": "", "loc": "upper right", "fontsize": 6, "n_stations": false, "round_decimal_places": 2},
                 "annotate_bbox": {"facecolor": "white", "edgecolor": "gainsboro", "alpha": 1},
                 "pdf_min_samples": 2000,
                 "bias_line": {"y": 0.0, "linestyle": "--", "linewidth": 1.0, "color": "black", "zorder": 0},
                 "plot": {"linewidth": 1},
                 "plot_options": ["bias", "obs", "individual", "annotate", "logx", "logy"]},

"scatter": {"grid": {"axis": "both", "color": "lightgrey", "alpha": 0.8},
            "axis_title": {"label": "", "fontsize": 8}, 
            "xlabel": {"xlabel": "Observations", "fontsize": 8}, 
            "ylabel": {"ylabel": "Experiment", "fontsize": 8},
            "xtick_params": {"labelsize": 7},
            "ytick_params": {"labelsize": 7}, 
            "annotate_stats": ["r2", "RMSE"],
            "annotate_text": {"s": "", "loc": "upper left", "fontsize": 6, "n_stations": false, "round_decimal_places": 2},
            "annotate_bbox": {"facecolor": "white", "edgecolor": "gainsboro", "alpha": 1},
            "regression": {"linewidth":1.0, "linestyle":"--"},
            "1:1_line": {"color": "lightgrey", "linewidth": 1, "linestyle": "--"},
            "1:2_line": {"color": "lightgrey", "linewidth": 1, "linestyle": "--"},
            "2:1_line": {"color": "lightgrey", "linewidth": 1, "linestyle": "--"},
            "equal_aspect": true, 
            "plot": {"marker": "o", "markersize": 2, "linestyle": "None"},
            "plot_options": ["individual", "annotate", "regression", "logx", "logy"]},

"heatmap": {"axis_title": {"label": "", "fontsize": 8}, 
            "xtick_params": {"labelsize": 7}, 
            "ytick_params": {"labelsize": 7}, 
            "cb": {"vmin_absolute": "", "vmax_absolute": "", "vmin_bias": "", "vmax_bias": "", "cmap_absolute": "", "cmap_bias": "", "n_ticks": 5, "orientation": "horizontal", "discrete": false, "n_discrete": 9},
            "cb_tick_params": {"labelsize": 8},
            "cb_label": {"size": 8}, 
            "round_decimal_places": 2,
            "plot": {"xticklabels": "auto", "yticklabels": "auto", "square": true, "cbar": false},
            "plot_options": ["bias", "annotate"]},

"table": {"axis_title": {"label": "", "fontsize": 8},
          "round_decimal_places":2,
          "plot_options": ["bias"]}
}